@model ECar.Models.Gas

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="broder pb-3 pt-3">
        <div class="form-group row">
            <h2>Delete Type of Fuel</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-8">
            <div class="form-group row p-1">
                <div class="col-4">
                    <label asp-for="TypeOfGas"></label>
                </div>
                <div class="col-8">
                    <input asp-for="TypeOfGas" class="form-control" readonly/>
                </div>
            </div>
            <div class="form-group row p-1">
                <div class="col-8 offset-4 row">
                    <div class="col">
                        <input type="submit" class="btn btn-danger w-100" value="Delete" />
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-success w-100">Back</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</form>