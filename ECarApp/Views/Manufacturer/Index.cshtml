@model IEnumerable<ECarApp.Models.Manufacturer>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6 p-0">
            <h2 style="text-transform:uppercase; font-size:30px;">Car Condition</h2>
        </div>
        <div class="col-6 text-right" style="text-align:right;">
            <a asp-controller="Manufacturer" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> 
                 Create New Manufacturer
            </a>
        </div>
    </div>
</div>


@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Manufacturer Name</th>
                <th scope="col">City</th>
                <th scope="col">Country</th>
                <th scope="col">Year Founded</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Id</td>
                    <td>@obj.Name</td>
                    <td>@obj.City</td>
                    <td>@obj.Country</td>
                    <td>@obj.YearFounded</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Manufacturer" asp-route-id="@obj.Id" asp-action="Edit" class="btn btn-primary"><i class="bi bi-pencil"></i> Update</a>
                        </div>
                    </td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Manufacturer" asp-route-id="@obj.Id" asp-action="Delete" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
